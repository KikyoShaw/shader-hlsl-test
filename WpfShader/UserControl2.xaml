<UserControl x:Class="WpfShader.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfShader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="TestGrid" Background="Black">
            <Image x:Name="Back" Source="/WpfShader;Component/Resources/1.jpg" />
        </Grid>
        <StackPanel Grid.Row="1" Height="30" Margin="10">
            <Slider x:Name="GrayAmountSlider" Minimum="0" Maximum="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>

</UserControl>
